<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/mainactivity_background</item>
    </style>
    <!--Logo for Sign-In Activity-->
    <style name="FirebaseUI.AuthMethodPicker.Logo">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">310dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>

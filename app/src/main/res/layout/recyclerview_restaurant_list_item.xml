<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.9"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill">
        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="mdco"/>

        <TextView
            android:id="@+id/how_far_is_it"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#000000"
            android:text="12m"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="fill">
        <TextView
            android:id="@+id/restaurant_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_weight="0.9"
            android:text="12 rue blabla"/>

        <ImageView
            android:id="@+id/workmate_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_person_outline_black_18"
            android:layout_weight="0.1"
            android:gravity="end"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0)"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="fill">
            <TextView
                android:id="@+id/closing_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_weight="0.9"
                android:text="Open until 7pm"/>

            <ImageView
                android:id="@+id/stars1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_black_18"
                android:layout_weight="0.1"
                android:gravity="end"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/stars2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_black_18"
                android:layout_weight="0.1"
                android:gravity="end"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/stars3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_black_18"
                android:layout_weight="0.1"
                android:gravity="end"
                android:textColor="#000000"/>

        </LinearLayout>

</LinearLayout>
    <ImageView
        android:id="@+id/restaurant_image_recyclerview"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:contentDescription="No Image"
        />
</LinearLayout>